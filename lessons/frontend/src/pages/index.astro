---
import Layout from '../layouts/Layout.astro';

// Fetch course information
const API_BASE = 'http://localhost:8080/api';
let course = null;
let lessons = [];

try {
  const courseRes = await fetch(`${API_BASE}/course`);
  const lessonsRes = await fetch(`${API_BASE}/lessons`);
  
  if (courseRes.ok) {
    course = await courseRes.json();
  }
  
  if (lessonsRes.ok) {
    lessons = await lessonsRes.json();
  }
} catch (error) {
  console.error('Failed to fetch course data:', error);
}
---

<Layout title="Course Portal - Home">
  <div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50">
    <!-- Hero Section -->
    <div class="relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 to-purple-600/10"></div>
      <div class="relative max-w-7xl mx-auto px-6 py-16">
        <div class="text-center mb-12">
          <div class="inline-flex items-center bg-blue-100 text-blue-800 text-sm font-medium px-4 py-2 rounded-full mb-6">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            Welcome to Your Learning Journey
          </div>
          
          <h1 class="text-5xl md:text-7xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mb-6">
            {course?.title || 'Programming Course'}
          </h1>
          
          <p class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto mb-8 leading-relaxed">
            {course?.description || 'Learn programming fundamentals in 10 weeks'}
          </p>
          
          <div class="flex flex-wrap justify-center gap-4">
            <a 
              href="/lessons" 
              class="group bg-gradient-to-r from-blue-600 to-blue-700 text-white px-8 py-4 rounded-xl font-semibold text-lg hover:from-blue-700 hover:to-blue-800 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl"
            >
              Start Learning
              <svg class="w-5 h-5 ml-2 inline-block group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5-5 5M6 12h12"></path>
              </svg>
            </a>
            
            <a 
              href="/syllabus" 
              class="bg-white text-gray-700 px-8 py-4 rounded-xl font-semibold text-lg hover:bg-gray-50 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl border border-gray-200"
            >
              View Syllabus
            </a>
          </div>
        </div>

        <!-- Course Info Cards -->
        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <div class="bg-white/80 backdrop-blur-sm p-8 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 border border-white/20">
            <div class="flex items-center mb-4">
              <div class="bg-blue-500 p-3 rounded-xl">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-gray-800 ml-4">Duration</h3>
            </div>
            <p class="text-gray-600 text-lg">{course?.duration || '10 weeks'}</p>
            <div class="mt-4 bg-blue-50 p-3 rounded-lg">
              <p class="text-sm text-blue-700">Flexible self-paced learning with weekly milestones</p>
            </div>
          </div>
          
          <div class="bg-white/80 backdrop-blur-sm p-8 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 border border-white/20">
            <div class="flex items-center mb-4">
              <div class="bg-green-500 p-3 rounded-xl">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-gray-800 ml-4">Instructor</h3>
            </div>
            <p class="text-gray-600 text-lg">{course?.instructor || 'Course Instructor'}</p>
            <div class="mt-4 bg-green-50 p-3 rounded-lg">
              <p class="text-sm text-green-700">Expert guidance with hands-on coding experience</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Course Progress Section -->
    <div class="max-w-7xl mx-auto px-6 py-16">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-800 mb-4">Course Progress</h2>
        <p class="text-xl text-gray-600">Track your learning journey week by week</p>
      </div>
      
      <div class="bg-white rounded-3xl shadow-xl p-8 mb-12">
        <div class="grid grid-cols-2 sm:grid-cols-5 gap-6">
          {Array.from({length: 10}, (_, i) => i + 1).map(week => {
            const hasLesson = lessons.some(lesson => lesson.week === week);
            return (
              <div class="text-center group">
                <div class={`relative mb-4 ${hasLesson ? 'animate-pulse' : ''}`}>
                  {hasLesson && (
                    <div class="absolute -inset-1 bg-gradient-to-r from-green-400 to-blue-500 rounded-full blur opacity-25 group-hover:opacity-75 transition duration-200"></div>
                  )}
                  <div class={`relative w-16 h-16 mx-auto rounded-full flex items-center justify-center text-lg font-bold transition-all duration-300 ${
                    hasLesson 
                      ? 'bg-gradient-to-r from-green-400 to-blue-500 text-white shadow-lg group-hover:scale-110' 
                      : 'bg-gray-200 text-gray-500 group-hover:bg-gray-300'
                  }`}>
                    {hasLesson ? (
                      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    ) : (
                      week
                    )}
                  </div>
                </div>
                
                <div class={`text-sm font-medium ${
                  hasLesson ? 'text-green-600' : 'text-gray-500'
                }`}>
                  Week {week}
                </div>
                
                {hasLesson && (
                  <a 
                    href={`/lessons/${week}`}
                    class="inline-block mt-2 text-xs bg-green-100 text-green-700 px-3 py-1 rounded-full hover:bg-green-200 transition-colors"
                  >
                    View Lesson
                  </a>
                )}
              </div>
            );
          })}
        </div>
        
        <!-- Progress Bar -->
        <div class="mt-8">
          <div class="flex justify-between text-sm text-gray-600 mb-2">
            <span>Progress</span>
            <span>{Math.round((lessons.length / 10) * 100)}% Complete</span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-3">
            <div 
              class="bg-gradient-to-r from-green-400 to-blue-500 h-3 rounded-full transition-all duration-500 ease-out"
              style={`width: ${(lessons.length / 10) * 100}%`}
            ></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Available Lessons Section -->
    {lessons.length > 0 ? (
      <div class="max-w-7xl mx-auto px-6 pb-16">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-800 mb-4">Available Lessons</h2>
          <p class="text-xl text-gray-600">Jump into any lesson that's ready for you</p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {lessons.slice(0, 6).map(lesson => (
            <div class="group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100">
              <div class="bg-gradient-to-r from-blue-500 to-purple-600 p-6 text-white">
                <div class="flex items-center justify-between">
                  <div class="bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full text-sm font-medium">
                    Week {lesson.week}
                  </div>
                  <svg class="w-6 h-6 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                  </svg>
                </div>
              </div>
              
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-3 group-hover:text-blue-600 transition-colors">
                  {lesson.title}
                </h3>
                
                {lesson.description && (
                  <p class="text-gray-600 mb-4 line-clamp-3">
                    {lesson.description}
                  </p>
                )}
                
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-500">
                    {new Date(lesson.created_at).toLocaleDateString()}
                  </span>
                  
                  <a 
                    href={`/lessons/${lesson.week}`}
                    class="inline-flex items-center bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transform hover:scale-105 transition-all duration-200 text-sm font-medium"
                  >
                    Start Lesson
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        {lessons.length > 6 && (
          <div class="text-center mt-12">
            <a 
              href="/lessons" 
              class="inline-flex items-center bg-gradient-to-r from-purple-600 to-blue-600 text-white px-8 py-4 rounded-xl font-semibold text-lg hover:from-purple-700 hover:to-blue-700 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl"
            >
              View All {lessons.length} Lessons
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5-5 5M6 12h12"></path>
              </svg>
            </a>
          </div>
        )}
      </div>
    ) : (
      <div class="max-w-4xl mx-auto px-6 pb-16">
        <div class="bg-gradient-to-r from-yellow-50 to-orange-50 border border-yellow-200 rounded-3xl p-12 text-center">
          <div class="text-6xl mb-6">📚</div>
          <h3 class="text-3xl font-bold text-yellow-800 mb-4">Lessons Coming Soon!</h3>
          <p class="text-xl text-yellow-700 mb-8 max-w-2xl mx-auto">
            We're preparing amazing content for you. Lessons will appear here automatically when they're added to the system.
          </p>
          <div class="bg-yellow-100 border border-yellow-300 rounded-2xl p-6 max-w-md mx-auto">
            <h4 class="font-bold text-yellow-800 mb-3">For Instructors:</h4>
            <ol class="text-sm text-yellow-700 space-y-2 text-left">
              <li class="flex items-center"><span class="w-6 h-6 bg-yellow-500 text-white rounded-full flex items-center justify-center text-xs font-bold mr-3">1</span>Create .md files in the lessons directory</li>
              <li class="flex items-center"><span class="w-6 h-6 bg-yellow-500 text-white rounded-full flex items-center justify-center text-xs font-bold mr-3">2</span>Name them like "week1.md" or use frontmatter</li>
              <li class="flex items-center"><span class="w-6 h-6 bg-yellow-500 text-white rounded-full flex items-center justify-center text-xs font-bold mr-3">3</span>Refresh to see new lessons appear!</li>
            </ol>
          </div>
        </div>
      </div>
    )}
  </div>
</Layout>