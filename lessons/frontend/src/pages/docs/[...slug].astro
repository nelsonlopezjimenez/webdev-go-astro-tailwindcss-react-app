---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import DocsTableOfContents from '../../components/DocsTableOfContents';
import MarkdownRenderer from '../../components/MarkdownRenderer.jsx';

export async function getStaticPaths() {
  const docs = await getCollection('docs');
  return docs.map((doc) => ({
    params: { slug: doc.slug },
    props: { doc },
  }));
}

const { doc } = Astro.props;
const { Content } = await doc.render();
---

<Layout title={doc.data.title}>
  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8">
    <div class="max-w-full mx-auto px-4">
      
      <!-- Breadcrumb matching lesson pages -->
      <nav class="mb-6">
        <ol class="flex items-center space-x-2 text-sm">
          <li><a href="/" class="text-indigo-600 hover:text-indigo-800">Home</a></li>
          <li class="text-gray-400">/</li>
          <li><a href="/docs" class="text-indigo-600 hover:text-indigo-800">Documentation</a></li>
          <li class="text-gray-400">/</li>
          <li class="text-gray-600">{doc.data.title}</li>
        </ol>
      </nav>

      <!-- Main Content Grid - Same as lesson pages -->
      <div class="grid grid-cols-1 xl:grid-cols-6 lg:grid-cols-5 gap-6">
        
        <!-- Sidebar - Match lesson sidebar -->
        <aside class="xl:col-span-1 lg:col-span-1 order-2 lg:order-1 sticky top-4 self-start">
          
          <DocsTableOfContents client:load />

          <nav class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mt-6">
            <h3 class="font-semibold mb-4 text-gray-900">Navigation</h3>
            <div class="flex flex-col space-y-2">
              <a href="/docs" class="flex items-center px-3 py-2 text-xs text-gray-600 hover:text-indigo-600 hover:bg-indigo-50 rounded-md transition-colors">
                <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                </svg>
                <span class="truncate">All Documents</span>
              </a>
            </div>
          </nav>
        </aside>

        <!-- Main Content Area - Match lesson content area -->
        <div class="xl:col-span-5 lg:col-span-4 order-1 lg:order-2">
          
          <!-- Document Header - Match lesson header -->
          <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
            <div class="flex items-center justify-between mb-4">
              <div class="flex-1">
                <h1 class="text-3xl font-bold text-gray-900 mb-2">
                  {doc.data.title}
                </h1>
                {doc.data.description && (
                  <p class="text-gray-600">{doc.data.description}</p>
                )}
              </div>
            </div>
          </div>

          <!-- Document Content - Match lesson content styling -->
          <div class="bg-white rounded-lg shadow-lg p-8">
            <div class="prose prose-lg max-w-none">
              <Content />
            </div>
          </div>


                <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
                    <div class="markdown-content">
                      <MarkdownRenderer content={doc.body} client:load />
                    </div>
                  </div>




        </div>
      </div>
    </div>
  </main>
</Layout>